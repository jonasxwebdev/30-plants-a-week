---
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout title="Seite nicht gefunden" activeRoute="">
  <div class="flex flex-col items-center justify-center min-h-[calc(100vh-12rem)] text-center">
    <div class="mb-8">
      <h1 class="text-8xl font-bold text-primary mb-4">404</h1>
      <h2 class="text-2xl font-bold text-text mb-3">Seite nicht gefunden</h2>
      <p class="text-gray-500 mb-6">Die Seite, die du suchst, existiert leider nicht.</p>
    </div>

    <div class="flex flex-col gap-3 w-full max-w-xs">
      <a
        href="/"
        class="w-full py-3 px-6 bg-primary text-white font-semibold rounded-2xl hover:bg-primary-dark transition-colors duration-200 shadow-sm"
      >
        Zurück zum Tracker
      </a>
      <a
        href="https://30plantsaweek.com"
        class="w-full py-3 px-6 bg-white text-primary font-semibold rounded-2xl border-2 border-primary hover:bg-gray-50 transition-colors duration-200"
      >
        Zur Homepage
      </a>
    </div>

    <div class="mt-12">
      <p class="text-gray-400 text-sm mb-3">Vielleicht suchst du:</p>
      <div class="flex flex-wrap gap-3 justify-center text-sm">
        <a href="/history" class="text-primary hover:underline"> Tagebuch </a>
        <span class="text-gray-300">•</span>
        <a href="/friends" class="text-primary hover:underline"> Freunde </a>
        <span class="text-gray-300">•</span>
        <a href="/profile" class="text-primary hover:underline"> Profil </a>
      </div>
    </div>
  </div>
</MainLayout>
