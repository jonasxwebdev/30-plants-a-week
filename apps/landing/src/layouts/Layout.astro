---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="de" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Tracke deine Pflanzenvielfalt und verbessere deine Darmgesundheit mit der 30-Pflanzen-pro-Woche Challenge. Wissenschaftlich fundiertes ErnÃ¤hrungs-Tracking leicht gemacht."
    />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="theme-color" content="#10b981" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta property="og:title" content={title} />
    <meta
      property="og:description"
      content="Tracke deine Pflanzenvielfalt und verbessere deine Darmgesundheit mit der 30-Pflanzen-pro-Woche Challenge."
    />
    <meta property="og:type" content="website" />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@400;500;600;700&family=Instrument+Serif:ital,wght@0,400;1,400&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="bg-neutral-50 text-neutral-900 antialiased">
    <slot />
  </body>
</html>

