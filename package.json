{
  "name": "30-plants-a-week",
  "version": "1.0.0",
  "private": true,
  "description": "30 Plants A Week - Monorepo for landing, app, and mobile",
  "author": "",
  "license": "ISC",
  "scripts": {
    "dev": "pnpm --parallel --filter \"./apps/*\" dev",
    "build": "pnpm --filter \"./apps/*\" build",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx,.astro",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx,.astro --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,astro,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,astro,json,css,md}\"",
    "test": "pnpm --filter \"./apps/*\" --filter \"./packages/*\" test",
    "clean": "pnpm --parallel --filter \"./apps/*\" --filter \"./packages/*\" clean"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "eslint-plugin-astro": "^0.31.4",
    "prettier": "^3.2.4",
    "prettier-plugin-astro": "^0.13.0",
    "typescript": "^5.3.3"
  }
}
